<Window x:Class="SteamBacklogPicker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamBacklogPicker.UI"
        mc:Ignorable="d"
        Title="Steam Backlog Picker"
        Width="1200"
        Height="720"
        MinWidth="960"
        MinHeight="600"
        Background="#FF1C1C1C"
        Foreground="White">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="#FF2A2A2A"
                Padding="24"
                CornerRadius="12"
                BorderBrush="#22FFFFFF"
                BorderThickness="1"
                AutomationProperties.Name="Painel de filtros">
            <StackPanel>
                <TextBlock Text="Filtros"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,16" />
                <CheckBox Content="Somente instalados"
                          IsChecked="{Binding Preferences.RequireInstalled, Mode=TwoWay}"
                          Margin="0,0,0,8"
                          AutomationProperties.Name="Filtrar apenas jogos instalados" />
                <CheckBox Content="Incluir compartilhados pela família"
                          IsChecked="{Binding Preferences.IncludeFamilyShared, Mode=TwoWay}"
                          Margin="0,0,0,8"
                          AutomationProperties.Name="Incluir biblioteca da família" />
                <TextBlock Text="Tags obrigatórias"
                           FontWeight="SemiBold"
                           Margin="0,16,0,4" />
                <TextBox Text="{Binding Preferences.RequiredTags, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Separe múltiplas tags com vírgula"
                         AutomationProperties.Name="Tags obrigatórias"
                         AutomationProperties.HelpText="Separe múltiplas tags com vírgula"
                         Margin="0,0,0,8" />
                <StackPanel Orientation="Horizontal" Margin="0,8,0,8" Spacing="12">
                    <StackPanel Width="140">
                        <TextBlock Text="Tamanho mínimo (GB)"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4" />
                        <TextBox Text="{Binding Preferences.MinimumSizeGb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 AutomationProperties.Name="Tamanho mínimo em gigabytes"
                                 Margin="0,0,0,8" />
                    </StackPanel>
                    <StackPanel Width="140">
                        <TextBlock Text="Tamanho máximo (GB)"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4" />
                        <TextBox Text="{Binding Preferences.MaximumSizeGb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 AutomationProperties.Name="Tamanho máximo em gigabytes"
                                 Margin="0,0,0,8" />
                    </StackPanel>
                </StackPanel>
                <Button x:Name="DrawButton"
                        Content="Sortear"
                        Command="{Binding DrawCommand}"
                        Height="48"
                        Margin="0,16,0,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="#FF66C0F4"
                        Foreground="Black"
                        AutomationProperties.Name="Sortear jogo"
                        AutomationProperties.HelpText="Seleciona um jogo aleatório aplicando os filtros"
                        HorizontalAlignment="Stretch" />
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,12,0,0"
                           Foreground="#FFB0BEC5"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Assertive" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Margin="32,0,0,0"
                Background="#FF2A2A2A"
                Padding="24"
                CornerRadius="12"
                BorderBrush="#22FFFFFF"
                BorderThickness="1"
                AutomationProperties.Name="Painel de detalhes do jogo">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Próximo jogo"
                               FontSize="24"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedGame.Title}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,4,0,12"
                               AutomationProperties.Name="Título do jogo selecionado" />
                </StackPanel>

                <Border Grid.Row="1"
                        Height="360"
                        CornerRadius="12"
                        Margin="0,0,0,16"
                        Background="#FF1F1F1F">
                    <Image Source="{Binding SelectedGame.CoverImagePath}"
                           Stretch="UniformToFill"
                           AutomationProperties.Name="Capa do jogo selecionado" />
                </Border>

                <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="8">
                    <TextBlock Text="{Binding SelectedGame.InstallationStatus}"
                               FontSize="16"
                               AutomationProperties.Name="Estado de instalação do jogo" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Jogar"
                                Command="{Binding LaunchCommand}"
                                IsEnabled="{Binding SelectedGame.CanLaunch}"
                                Width="140"
                                Height="40"
                                AutomationProperties.Name="Abrir jogo no Steam" />
                        <Button Content="Instalar"
                                Command="{Binding InstallCommand}"
                                IsEnabled="{Binding SelectedGame.CanInstall}"
                                Width="140"
                                Height="40"
                                AutomationProperties.Name="Instalar jogo no Steam" />
                        <ToggleButton Content="Favorito"
                                      IsChecked="{Binding SelectedGame.IsFavorite, Mode=TwoWay}"
                                      Width="140"
                                      Height="40"
                                      AutomationProperties.Name="Marcar jogo como favorito" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding SelectedGame.Tags}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemHeight="24" ItemWidth="Auto" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF37474F"
                                        Padding="6,2"
                                        Margin="0,0,6,6"
                                        CornerRadius="8">
                                    <TextBlock Text="{Binding}" FontSize="12" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
