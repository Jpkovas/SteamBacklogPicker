<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="SteamBacklogPicker.Linux.Views.MainWindow"
        Width="900"
        Height="540"
        Title="SteamBacklogPicker Linux"
        mc:Ignorable="d">
  <StackPanel Margin="16" Spacing="8">
    <TextBlock FontSize="20" Text="{Binding SelectedGame.Title}" />
    <TextBlock Text="{Binding StatusMessage}" />
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button Content="Refresh" Command="{Binding RefreshCommand}" />
      <Button Content="Draw" Command="{Binding DrawCommand}" />
      <Button Content="Launch" Command="{Binding LaunchCommand}" />
      <Button Content="Install" Command="{Binding InstallCommand}" />
    </StackPanel>
  </StackPanel>
</Window>
